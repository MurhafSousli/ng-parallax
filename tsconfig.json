{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noEmitOnError": false
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "tests",
    "config",
    "src/polyfills.ts",
    "src/vendor.ts",
    "src/**/*.spec.ts"
  ]
}